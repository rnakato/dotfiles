;; 起動時のフレーム設定
(setq initial-frame-alist
      (append (list
               '(top . 200)
               '(left . 200)
               '(width . 100)
               '(height . 45)
               )
              initial-frame-alist))
(setq default-frame-alist initial-frame-alist)

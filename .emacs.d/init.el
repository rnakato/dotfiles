;; 起動時のフレーム設定
(setq initial-frame-alist
      (append (list
               '(top . 100)
               '(left . 100)
               '(width . 100)
               '(height . 40)
               )
              initial-frame-alist))
(setq default-frame-alist initial-frame-alist)
